<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:elevation="3dp"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btn_find_wrapper"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="@+id/btn_find_wrapper"
        app:layout_constraintRight_toRightOf="@+id/btn_find_wrapper"
        app:layout_constraintTop_toTopOf="@+id/btn_find_wrapper"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/ic_image_black_24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="本软件使用waifu2x服务提供图片处理\n处理图片需要消耗大量服务器资源  请节约使用"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_find_wrapper"
        app:layout_constraintVertical_bias="0.969"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:text="选择图片"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_find_wrapper"
        app:layout_constraintLeft_toLeftOf="@+id/btn_find_wrapper"
        app:layout_constraintRight_toRightOf="@+id/btn_find_wrapper"
        app:layout_constraintTop_toTopOf="@+id/btn_find_wrapper"
        app:layout_constraintVertical_bias="0.92"/>

    <FrameLayout
        android:id="@+id/btn_find_wrapper"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/find_btn_bg"
        android:elevation="2dp"
        android:transitionName="@string/simple_fragment_transition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <ImageView
            android:id="@+id/btn_find"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:padding="20dp"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_search_black_24dp"/>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
